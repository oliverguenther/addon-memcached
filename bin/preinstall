#!/bin/bash

set -e

. ${INSTALLER_DIR}/wizard

OSFAMILY="$(wiz_fact osfamily)"

install_memcached() {
	case "$OSFAMILY" in
		"debian")
			wiz_check_package "memcached" || apt-get install -y memcached
			;;
		"redhat")
			wiz_check_package "memcached" || yum install -y memcached
			chkconfig memcached on
			;;
		"suse")
			if ! wiz_check_package "memcached" ; then
				rpm --import http://download.opensuse.org/repositories/home:/pheinlein/SLE_12/repodata/repomd.xml.key
				zypper rr "home_pheinlein" &>/dev/null
				zypper addrepo http://download.opensuse.org/repositories/home:pheinlein/SLE_12/home:pheinlein.repo
				zypper modifyrepo --enable "home_pheinlein"
				zypper install --from "home_pheinlein" -y memcached
				zypper modifyrepo --disable "home_pheinlein"
			fi
			chkconfig memcached on
			;;
	esac
}

case "$(wiz_get "memcached/autoinstall")" in
	"skip")
		echo "No memcached server to install. Skipping."
		;;
	"install")
		install_memcached
		;;
esac
